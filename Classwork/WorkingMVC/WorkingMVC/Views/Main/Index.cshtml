@model List<WorkingMVC.Data.Entities.CategoryEntity>
@{
    // Layout = "_MainLayout"; не використовувати обгортку Layout
}

<div class="container">
    <h1 class="text-center">Категорії</h1>
    <div class="my-2 p-2 border-bottom">
        <a asp-action="Create" class="btn btn-success">Додати категорію</a>
    </div>
 
    <div class="border rounded pt-1">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Фото</th>
                    <th scope="col">Назва</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <th scope="row">@category.Id</th>
                        <td>
                            <img src="/images/@category.Image" width="100" />
                        </td>
                        <td>@category.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
</div>

