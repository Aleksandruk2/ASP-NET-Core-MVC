@model List<WorkingMVC.Models.Category.CategoryItemModel>
@{
    // Layout = "_MainLayout"; не використовувати обгортку Layout
}

<div class="container">
    <h1 class="text-center">Категорії</h1>
    <div class="my-2 p-2 border-bottom">
        <a asp-action="Create" class="btn btn-success">Додати категорію</a>
    </div>

    <div class="border rounded overflow-hidden">
        <table class="table table-hover table-row-hover">
            <thead>
                <tr>
                    <th scope="col" class="border-end" style="width: 30px">#</th>
                    <th scope="col" class="border-end" style="width: 150px">Фото</th>
                    <th scope="col">Назва</th>
                    <th scope="col" style="width: 100px"></th>
                </tr>
            </thead>
            <tbody id="tbody">
                @foreach (var category in Model)
                {
                    <tr>
                        <th scope="row" class="border-end">@category.Id</th>
                        <td class="border-end">
                            <img src="/images/@category.Image" width="100" />
                        </td>
                        <td class="my-border-end">@category.Name</td>
                        <td>
                            <div class="actions">
                                <button id="@category.Id" data-name="@category.Name" style="width: 90px" class="btn btn-danger text-white mb-1 d-flex align-items-center justify-content-between">
                                    Delete
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                    </svg>
                                </button>

                                <a asp-action="Edit" asp-route-id="@category.Id" style="width: 90px" class="btn btn-info text-white d-flex align-items-center justify-content-between">
                                    Edit
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="modalCenter" class="myModal">
    <div id="modalContent" class="myModal-content">
        <div class="myModal-header">
            <h5 id="modalTitle" class="m-0">Modal Title</h5>
            <button id="closeIcon" class="btn btn-close">
            </button>
        </div>
       <div class="myModal-body">
           <p id="modalBody" class="m-0 text-wrap">

           </p>
       </div>
       <div class="myModal-footer">
            <button id="close" class="m-0 me-1 btn btn-secondary text-white d-flex align-items-center justify-content-between" style="width: 90px">
                Close
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                </svg>
            </button>
            <a id="delete" class="m-0 btn btn-danger text-white d-flex align-items-center justify-content-between" style="width: 90px">
               Delete
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                </svg>
           </a>
       </div>
    </div>
</div>

<script>
    const tbody = document.querySelector("tbody");
    const body = document.querySelector("body");
    const buttons = tbody.querySelectorAll("td button");
    const modal = document.getElementById("modalCenter");
    const modalContent = document.getElementById("modalContent");
    const closeIcon = document.getElementById("closeIcon");
    const close = document.getElementById("close");
    const modalTitle = document.getElementById("modalTitle");
    const modalBody = document.getElementById("modalBody");
    const btnDelete = document.getElementById("delete");

    buttons.forEach(btn => {
        btn.addEventListener("click", () => {
            btnDelete.href = "Main/Delete/" + btn.id;
            modalContent.classList.add("show");
            modalTitle.innerText = "Видалення " + '"' + btn.dataset.name + '"';
            modalBody.innerText = `Ви дійсно хочете видалити категорію "${btn.dataset.name}"?`;
            modal.style.opacity = 1;
            modal.style.zIndex = 1;
        });
    });

    const modalClose = () => {
        modalContent.classList.remove("show");
        modal.style.opacity = 0;
        modal.style.zIndex = -1;
    };

    closeIcon.addEventListener("click", modalClose);
    close.addEventListener("click", modalClose);
</script>
