<div class="container mt-5">
    <div>
        <h4>@Model.FullName | @Model.Email</h4>
    </div>
    <form asp-action="Edit">
        <div class="d-flex justify-content-center mb-2" style="border: 2px dashed #dee2e6; border-radius: .5rem;">
            @for (int i = 0; i < @Model.AllActiveRoles!.Count; i++)
            {
                <div class="m-1">
                    <input asp-for="AllActiveRoles[i].IsActive" class="btn-check" id="@Model.AllActiveRoles[i].Role" autocomplete="off">
                    <label class="btn btn-outline-primary" for="@Model.AllActiveRoles[i].Role">@Model.AllActiveRoles[i].Role</label><br>
                    <input type="hidden"
                           asp-for="AllActiveRoles[i].Role" />
                </div>
            }
        </div>

        <button type="submit" class="btn btn-success">Змінити ролі</button>
    </form>
</div>