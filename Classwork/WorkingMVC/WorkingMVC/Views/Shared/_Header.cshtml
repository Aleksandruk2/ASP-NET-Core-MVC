@using WorkingMVC.Constants
<header data-bs-theme="dark">
    <nav class="navbar navbar-expand navbar-dark fixed-top bg-dark">
        <div class="container">
            <a class="navbar-brand"
                asp-action="Index"
                asp-controller="Main">
                АТБ
                </a>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    @if (User.IsInRole($"{Roles.Admin}"))
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-action="Index"
                               asp-controller="Main"
                               asp-area="Admin">
                               Категорії
                            </a>
                        </li>
                    }
                    @if (User.IsInRole($"{Roles.Admin}"))
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-action="Index"
                               asp-controller="Users"
                               asp-area="Admin">
                               Користувачі
                            </a>
                        </li>
                    }
                    @if (User.IsInRole($"{Roles.Admin}"))
                    {
                        <li class="nav-item"> 
                            <a class="nav-link"
                                asp-controller="Dashboards"
                                asp-action="Index"
                                asp-area="Admin"
                                >Адмін панель</a>
                        </li>
                    }
                   
                </ul>

                @if(User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("UserLink");

                        <li class="nav-item">
                            <form asp-action="Logout"
                                asp-controller="Account"
                                method="post">
                                <button class="nav-link">Вийти</button>
                            </form>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link"
                                asp-action="Register"
                                asp-controller="Account">
                                Реєстрація
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                                asp-action="Login"
                                asp-controller="Account">
                                Вхід
                            </a>
                        </li>
                    </ul>
                }

               
            </div>
        </div>
    </nav>
</header>