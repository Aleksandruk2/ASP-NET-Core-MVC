<header data-bs-theme="dark">
    <nav class="navbar navbar-expand navbar-dark fixed-top bg-dark">
        <div class="container">
            <a class="navbar-brand"
                asp-action="Index"
                asp-controller="Main">
                АТБ
                </a>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page"
                           asp-action="Index"
                           asp-controller="Main">
                           Категорії</a>
                    </li>
                    <li class="nav-item"> <a class="nav-link"
                           asp-action="Index"
                           asp-controller="Users">
                           Користувачі</a>
                    </li>
                    <li class="nav-item"> <a class="nav-link" aria-disabled="true">Disabled</a> </li>
                </ul>

                @if(User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        @await Component.InvokeAsync("UserLink");

                        <li class="nav-item">
                            <form asp-action="Logout"
                                asp-controller="Account"
                                method="post">
                                <button class="nav-link">Вийти</button>
                            </form>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link"
                                asp-action="Register"
                                asp-controller="Account">
                                Реєстрація
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                                asp-action="Login"
                                asp-controller="Account">
                                Вхід
                            </a>
                        </li>
                    </ul>
                }

               
            </div>
        </div>
    </nav>
</header>