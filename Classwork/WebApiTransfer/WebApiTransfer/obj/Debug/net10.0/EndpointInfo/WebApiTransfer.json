  "components": {
    "schemas": {
      "ForgotPasswordModel": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "Email-адреса користувача, для якого потрібно розпочати процес\r\nвідновлення пароля. На цю адресу буде надіслано лист\r\nз посиланням або кодом для скидання пароля.",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Модель запиту для ініціалізації процесу відновлення пароля користувача.\r\nВикористовується для передачі email-адреси, на яку буде надіслано\r\nінструкції щодо скидання пароля."
      },
      "GoogleAuthDto": {
        "type": "object",
        "properties": {
          "idToken": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginModel": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "Елктронна пошта користувача",
            "nullable": true,
            "example": "admin@gmail.com"
          },
          "password": {
            "type": "string",
            "description": "Пароль користувача",
            "nullable": true,
            "example": "Admin123"
          }
        },
        "additionalProperties": false
      },
      "ResetPasswordModel": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "Email-адреса користувача, для якого виконується скидання пароля.\r\nВикористовується для ідентифікації облікового запису.",
            "nullable": true
          },
          "token": {
            "type": "string",
            "description": "Токен скидання пароля, згенерований системою та надісланий користувачу\r\nелектронною поштою. Використовується для перевірки дійсності запиту.",
            "nullable": true
          },
          "newPassword": {
            "type": "string",
            "description": "Новий пароль користувача.\r\nПовинен відповідати вимогам безпеки, визначеним у системі.",
            "nullable": true
          },
          "confirmNewPassword": {
            "type": "string",
            "description": "Підтвердження нового пароля.\r\nПовинно співпадати зі значенням властивості Core.Models.Account.ResetPasswordModel.NewPassword.",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Модель запиту для завершення процесу скидання пароля користувача.\r\nМістить необхідні дані для перевірки токена та встановлення нового пароля."
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "JWT Authorization header using the Bearer scheme.",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
